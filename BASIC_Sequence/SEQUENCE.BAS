300 REM SUBROUTINE: UPDATE ORDINAL
310 REM ******************************************
1000 STEP_COUNT = STEP_COUNT + 1
1010 REM
1020 REM CLEAR CURRENT TERMS
1030 FOR I = 1 TO 32
1040   TERMS(I, 1) = 0: TERMS(I, 2) = 0
1050 NEXT I
1060 TERM_COUNT = 0
1070 REM
1080 REM GENERATE NEXT ORDINAL
1090 IF STEP_COUNT < 1000 THEN
1100   REM NATURAL NUMBERS: 0, 1, 2, 3, ...
1110   IF STEP_COUNT > 0 THEN
1120     TERMS(1, 1) = 0: TERMS(1, 2) = STEP_COUNT
1130     TERM_COUNT = 1
1140   ENDIF
1150 ELSEIF STEP_COUNT = 1000 THEN
1160   REM FIRST LIMIT ORDINAL: ω
1170   TERMS(1, 1) = 1: TERMS(1, 2) = 1
1180   TERM_COUNT = 1
1190 ELSEIF STEP_COUNT < 2000 THEN
1200   REM ω + n SEQUENCE
1210   OFFSET = STEP_COUNT - 1000
1220   TERMS(1, 1) = 1: TERMS(1, 2) = 1
1230   TERM_COUNT = 1
1240   IF OFFSET > 0 THEN
1250     TERMS(2, 1) = 0: TERMS(2, 2) = OFFSET
1260     TERM_COUNT = 2
1270   ENDIF
1280 ELSEIF STEP_COUNT = 2000 THEN
1290   REM ω⋅2
1300   TERMS(1, 1) = 1: TERMS(1, 2) = 2
1310   TERM_COUNT = 1
1320 ELSEIF STEP_COUNT < 3000 THEN
1330   REM ω⋅2 + n SEQUENCE
1340   OFFSET = STEP_COUNT - 2000
1350   TERMS(1, 1) = 1: TERMS(1, 2) = 2
1360   TERM_COUNT = 1
1370   IF OFFSET > 0 THEN
1380     TERMS(2, 1) = 0: TERMS(2, 2) = OFFSET
1390     TERM_COUNT = 2
1400   ENDIF
1410 ELSEIF STEP_COUNT = 3000 THEN
1420   REM ω²
1430   TERMS(1, 1) = 2: TERMS(1, 2) = 1
1440   TERM_COUNT = 1
1450 ELSE
1460   REM HIGHER ORDINALS - SIMPLIFIED PROGRESSION
1470   TERMS(1, 1) = INT((STEP_COUNT - 3000) / 1000) + 2
1480   TERMS(1, 2) = 1
1490   REMAINDER = (STEP_COUNT - 3000) MOD 1000
1500   TERM_COUNT = 1
1510   IF REMAINDER > 0 THEN
1520     TERMS(2, 1) = 0: TERMS(2, 2) = REMAINDER
1530     TERM_COUNT = 2
1540   ENDIF
1550 ENDIF
1560 RETURN
