1590 REM SUBROUTINE: DISPLAY ORDINAL
1600 REM ******************************************
2000 DISPLAY$ = ""
2010 REM
2020 REM BUILD ORDINAL STRING
2030 IF TERM_COUNT = 0 THEN
2040   DISPLAY$ = "0"
2050   GOTO 2400
2060 ENDIF
2070 REM
2080 FOR I = 1 TO TERM_COUNT
2090   EXP = TERMS(I, 1)
2100   COEFF = TERMS(I, 2)
2110   REM
2120   IF I > 1 THEN DISPLAY$ = DISPLAY$ + "+"
2130   REM
2140   IF EXP = 0 THEN
2150     IF COEFF = 1 AND I > 1 THEN
2160       DISPLAY$ = DISPLAY$ + "1"
2170     ELSE
2180       DISPLAY$ = DISPLAY$ + STR$(COEFF)
2190     ENDIF
2200   ELSEIF EXP = 1 THEN
2210     IF COEFF = 1 THEN
2220       DISPLAY$ = DISPLAY$ + CHR$(234): REM ω CHARACTER (OMEGA)
2230     ELSE
2240       DISPLAY$ = DISPLAY$ + CHR$(234) + "⋅" + STR$(COEFF)
2250     ENDIF
2260   ELSEIF EXP = 2 THEN
2270     IF COEFF = 1 THEN
2280       DISPLAY$ = DISPLAY$ + CHR$(234) + "²"
2290     ELSE
2300       DISPLAY$ = DISPLAY$ + CHR$(234) + "²⋅" + STR$(COEFF)
2310     ENDIF
2320   ELSE
2330     IF COEFF = 1 THEN
2340       DISPLAY$ = DISPLAY$ + CHR$(234) + "^" + STR$(EXP)
2350     ELSE
2360       DISPLAY$ = DISPLAY$ + CHR$(234) + "^" + STR$(EXP) + "⋅" + STR$(COEFF)
2370     ENDIF
2380   ENDIF
2390 NEXT I
2400 REM
2410 REM CENTER AND DISPLAY
2420 CLS
2430 ROW = 12: REM CENTER VERTICALLY (25/2)
2440 COL = (80 - LEN(DISPLAY$)) / 2: REM CENTER HORIZONTALLY
2450 LOCATE ROW, COL
2460 PRINT DISPLAY$;
2470 RETURN
